# Example Diun configuration file
# Copy this file to your host and mount it to /app/diun.yml to use custom configuration
#
# Mount example in docker-compose.yml:
#   volumes:
#     - ./diun.yml:/app/diun.yml:ro
#
# Or in Dokploy Volume Mounts:
#   /path/to/your/diun.yml:/app/diun.yml

# Watch configuration
watch:
  workers: 10
  schedule: "0 */6 * * *"  # Check every 6 hours (can be overridden by DIUN_SCHEDULE env var if not mounted)
  firstCheckNotif: false

# Notification configuration
notif:
  # Telegram notification (optional)
  # Uncomment and configure to receive Telegram notifications
  # telegram:
  #   token: "123456789:ABCdefGhIjklmNoPQRsTUVwxyZ"
  #   chatIDs:
  #     - "123456789"
  #     - "987654321"
  #   templateBody: |
  #     Docker image **{{ .Entry.Image }}** has been updated.
  #     Status: {{ .Entry.Status }}
  #     Time: {{ .Entry.Manifest.Created }}

  # Discord notification (optional)
  # discord:
  #   webhookURL: "https://discord.com/api/webhooks/..."
  #   mentions:
  #     - "@everyone"

  # Slack notification (optional)
  # slack:
  #   webhookURL: "https://hooks.slack.com/services/..."

  # Email notification (optional)
  # mail:
  #   host: smtp.example.com
  #   port: 587
  #   username: user@example.com
  #   password: yourpassword
  #   from: diun@example.com
  #   to:
  #     - admin@example.com

  # Script notifier (REQUIRED - triggers Dokploy deployments)
  # DO NOT REMOVE THIS unless you have alternative deployment trigger logic
  script:
    cmd: /app/scripts/notifier.sh

# Providers configuration
# DO NOT MODIFY - this is automatically generated by sync.sh
providers:
  file:
    filename: /app/diun_images.yml